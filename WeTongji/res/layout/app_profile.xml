<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" 
    android:background="@android:color/white" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
  	xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:id="@+id/scrollview_content" 
        android:scrollbars="none" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" 
        style="@style/Style_Scrollable">
        <LinearLayout android:gravity="center" 
            android:orientation="vertical" 
            android:id="@+id/layout_content" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" >
            
            
            <!-- 头像 -->
            <LinearLayout android:orientation="vertical" 
                android:background="@drawable/btn_edittext_def_focus" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:layout_marginRight="9.0dp"
	            android:layout_marginTop="7.0dp"
	            android:layout_marginLeft="9.0dp" >
	            
                <RelativeLayout 
                    android:background="@android:color/white" 
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content">
                    <ImageView android:id="@id/img_profile_avatar" 
                        android:src="@drawable/default_avatar"
                        style="@style/Profile_Avatar" />
                    
                    <ImageView 
                        android:id="@id/img_profile_avatar_upload"
                        android:src="@drawable/avatar_upload"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        style="@style/Avatar_Upload" />
                    
                </RelativeLayout>
            </LinearLayout>
            
            <!-- 基本资料 -->
            <LinearLayout android:orientation="vertical" 
                android:background="@drawable/btn_edittext_def_focus" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:layout_marginRight="9.0dp"
	            android:layout_marginTop="7.0dp"
	            android:layout_marginLeft="9.0dp" >
                <TextView 
                    android:text="@string/basic_data" style="@style/Profile_Item_Title" />
                <RelativeLayout 
                    android:background="@android:color/white" 
                    android:layout_width="fill_parent" 
                    android:layout_height="45.0dip">
                    <TextView android:id="@+id/textviewmomotitle" 
                        android:text="@string/name" style="@style/Profile_Item_Left" />
                    <TextView android:id="@id/tv_profile_name" 
                        android:text="" style="@style/Profile_Item_Right" />
                </RelativeLayout>
                <include layout="@layout/include_divideline" />
                <RelativeLayout  
                    android:background="@android:color/white" 
                    android:layout_width="fill_parent" 
                    android:layout_height="45.0dip">
                    <TextView android:id="@+id/textviewtimetitle" 
                        android:text="@string/student_num" 
                        style="@style/Profile_Item_Left" />
                    <TextView android:id="@id/tv_profile_student_num" 
                        android:text="" 
                        style="@style/Profile_Item_Right" />
                </RelativeLayout>
                <include layout="@layout/include_divideline" />
                <RelativeLayout  
                    android:background="@android:color/white" 
                    android:layout_width="fill_parent" 
                    android:layout_height="45.0dip">
                    <TextView  
                        android:text="@string/gender" 
                        style="@style/Profile_Item_Left" />
                    <TextView android:id="@id/tv_profile_gender" 
                        android:text="" 
                        style="@style/Profile_Item_Right" />
                </RelativeLayout>
                
                <include layout="@layout/include_divideline" />
                <RelativeLayout  
                    android:background="@android:color/white" 
                    android:layout_width="fill_parent" 
                    android:layout_height="45.0dip">
                    <TextView 
                        android:text="@string/birthday" 
                        style="@style/Profile_Item_Left" />
                    <TextView android:id="@id/tv_profile_birthday" 
                        android:text="" 
                        style="@style/Profile_Item_Right" />
                </RelativeLayout>
            </LinearLayout>
            
            
            <!-- 专业资料 -->
            <LinearLayout android:orientation="vertical" 
                android:background="@drawable/btn_edittext_def_focus" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:layout_marginRight="9.0dp"
	            android:layout_marginTop="9.0dp"
	            android:layout_marginLeft="9.0dp" >
                
                <TextView  
                    android:text="@string/major_data" style="@style/Profile_Item_Title" />
                <RelativeLayout 
                    android:background="@android:color/white" 
                    android:layout_width="fill_parent" 
                    android:layout_height="45.0dip">
                    <TextView  
                        android:text="@string/entrance_year" style="@style/Profile_Item_Left" />
                    <TextView android:id="@id/tv_profile_entrance_year" 
                        android:text="" style="@style/Profile_Item_Right" />
                </RelativeLayout>
                
                <include layout="@layout/include_divideline" />
                <RelativeLayout  
                    android:background="@android:color/white" 
                    android:layout_width="fill_parent" 
                    android:layout_height="45.0dip">
                    <TextView  
                        android:text="@string/plan" 
                        style="@style/Profile_Item_Left" />
                    <TextView android:id="@id/tv_profile_plan" 
                        android:text="" 
                        style="@style/Profile_Item_Right" />
                </RelativeLayout>
                
                <include layout="@layout/include_divideline" />
                <RelativeLayout  
                    android:background="@android:color/white" 
                    android:layout_width="fill_parent" 
                    android:layout_height="45.0dip">
                    <TextView  
                        android:text="@string/school" 
                        style="@style/Profile_Item_Left" />
                    <TextView android:id="@id/tv_profile_school" 
                        android:text="" 
                        style="@style/Profile_Item_Right" />
                </RelativeLayout>
                
                <include layout="@layout/include_divideline" />
                <RelativeLayout  
                    android:background="@android:color/white" 
                    android:layout_width="fill_parent" 
                    android:layout_height="45.0dip">
                    <TextView 
                        android:text="@string/major" 
                        style="@style/Profile_Item_Left" />
                    <TextView android:id="@id/tv_profile_major" 
                        android:text="" 
                        style="@style/Profile_Item_Right" />
                </RelativeLayout>
           	</LinearLayout>
           	
            
            <!-- 社交资料 -->
             <LinearLayout android:orientation="vertical" 
                android:id="@+id/profile_layout_acount_info" 
                android:background="@drawable/btn_edittext_def_focus" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:layout_marginRight="9.0dp"
	            android:layout_marginTop="7.0dp"
	            android:layout_marginLeft="9.0dp"
	            android:layout_marginBottom="9.0dp" >
                
                <TextView android:id="@+id/textview_aocuntinfo_title" 
                    android:text="@string/social_data" style="@style/Profile_Item_Title" />
                <RelativeLayout 
                    android:background="@android:color/white" 
                    android:layout_width="fill_parent" 
                    android:layout_height="45.0dip">
                    <TextView 
                        android:text="@string/telephone" 
                        style="@style/Profile_Item_Left" />
                    <TextView android:id="@id/tv_profile_telephone" 
                        android:text="" style="@style/Profile_Item_Right" />
                </RelativeLayout>
                
                <include layout="@layout/include_divideline" />
                <RelativeLayout  
                    android:background="@android:color/white" 
                    android:layout_width="fill_parent" 
                    android:layout_height="45.0dip">
                    <TextView 
                        android:text="@string/email" 
                        style="@style/Profile_Item_Left" />
                    <TextView android:id="@id/tv_profile_email" 
                        android:text="" 
                        style="@style/Profile_Item_Right" />
                </RelativeLayout>
                
                <include layout="@layout/include_divideline" />
                <RelativeLayout  
                    android:background="@android:color/white" 
                    android:layout_width="fill_parent" 
                    android:layout_height="45.0dip">
                    <TextView 
                        android:text="@string/qq" 
                        style="@style/Profile_Item_Left" />
                    <TextView android:id="@id/tv_profile_qq" 
                        android:text="" 
                        style="@style/Profile_Item_Right" />
                </RelativeLayout>
                
                <include layout="@layout/include_divideline" />
                <RelativeLayout  
                    android:background="@android:color/white" 
                    android:layout_width="fill_parent" 
                    android:layout_height="45.0dip">
                    <TextView 
                        android:text="@string/sina_weibo" 
                        style="@style/Profile_Item_Left" />
                    <TextView android:id="@id/tv_profile_sina_weibo" 
                        android:text="" 
                        style="@style/Profile_Item_Right" />
                </RelativeLayout>
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>   
</RelativeLayout>