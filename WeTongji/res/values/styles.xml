<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="Style_BottomBar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_unlogin_bar</item>
        <item name="android:padding">6.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Style_Login_register_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:paddingLeft">25.0dip</item>
        <item name="android:paddingRight">25.0dip</item>
        <item name="android:minWidth">120.0dip</item>
        <item name="android:height">42.0dip</item>
    </style>
    
    <style name="Style_Scrollable">
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    
    <!-- 自定义process dialog -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">  
    	<item name="android:windowFrame">@null</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>  
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>  
    </style>  
      
    <style name="CustomProgressDialog" parent="@style/CustomDialog">  
        <item name="android:windowBackground">@android:color/transparent</item>  
        <item name="android:windowNoTitle">true</item>  
    </style>  
    <!-- 自定义process dialog -->
    
    <style name="Profile_Item_Title">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/dropbar_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_splitbar</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="Profile_Item_Left">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/notes_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="Profile_Item_Right" parent="@style/Item_Right">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/dropbar_text_color</item>
        <item name="android:singleLine">true</item>
    </style>
    
     <style name="Item_Right">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12.0dip</item>
        <item name="android:layout_marginRight">12.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
     <style name="EditText_Right">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">160.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12.0dip</item>
        <item name="android:layout_marginRight">12.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
     <style name="Modify_Profile_Item_Right" parent="@style/EditText_Right">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/dropbar_text_color</item>
        <item name="android:singleLine">true</item>
    </style>
    
     <style name="Avatar_Upload">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12.0dip</item>
        <item name="android:layout_marginRight">16.0dip</item>
        <item name="android:layout_marginBottom">16.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    
     <style name="Profile_Avatar">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">100.0dp</item>
        <item name="android:layout_height">100.0dp</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/avatar_frame</item>
    </style>
    
    
    <!-- TabVPI -->
</resources>
